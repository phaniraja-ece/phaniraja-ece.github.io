body {
  background-color: #0d1117;
  color: #c9d1d9;
  font-family: 'Segoe UI', sans-serif;
  padding: 2em;
}

.container {
  max-width: 800px;
  margin: auto;
  text-align: center;
}

.controls {
  margin-bottom: 1.5em;
}

label {
  margin-right: 0.5em;
  font-weight: bold;
  color: #58a6ff;
}

select, button {
  margin: 0.5em;
  padding: 0.6em;
  font-size: 1em;
  border-radius: 6px;
  border: none;
}

button {
  background-color: #2ea44f;
  color: white;
  font-weight: bold;
  cursor: pointer;
  transition: background-color 0.3s ease, transform 0.2s ease;
}

button:hover {
  background-color: #22863a;
  transform: scale(1.05);
}

#grid {
  display: grid;
  grid-template-columns: repeat(5, 40px);
  grid-template-rows: repeat(8, 40px);
  gap: 5px;
  justify-content: center;
  margin-bottom: 2em;
}

.pixel {
  width: 40px;
  height: 40px;
  background-color: #161b22;
  border: 1px solid #30363d;
  cursor: pointer;
}

.pixel.on.green { background-color: #00ff00; }
.pixel.on.black { background-color: #000000; }
.pixel.on.white { background-color: #ffffff; }
.pixel.on.blue  { background-color: #00bfff; }

pre {
  background-color: #161b22;
  padding: 1em;
  text-align: left;
  border-radius: 6px;
  white-space: pre-wrap;
  word-break: break-word;
}
